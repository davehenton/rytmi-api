{
  "name": "rytmi-api",
  "version": "0.1.0",
  "description": "Rytmi management system API",
  "repository": {
    "type": "git",
    "url": "https://github.com/codento/rytmi-api"
  },
  "main": "api/index.js",
  "scripts": {
    "start": "nodemon -w api -w db -w services --exec \"babel-node api --presets es2015,es2017\"",
    "debug": "nodemon -w api -w db -w services --inspect --exec \"babel-node api --presets es2015,es2017\"",
    "build": "docker-compose build",
    "test": "jest",
    "testwatch": "jest --watch",
    "create-html-doc": "node node_modules/spectacle-docs/bin/spectacle.js -t doc/ doc/openapi-spec.json",
    "containers": "docker-compose up -d && echo Rytmi API is now up and running.",
    "stop": "docker-compose down",
    "migrate": "sequelize db:migrate"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageReporters": ["json", "html", "text-summary"],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/test/**",
      "!**/coverage/**",
      "!**/db/migrations/**",
      "!**/db/seeders/**"
    ]
  },
  "author": "Antti Myyr√§",
  "license": "MIT",
  "dependencies": {
    "babel-register": "^6.26.0",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "pg": "^7.4.1",
    "sequelize": "^4.32.2",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "eslint": "^4.16.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "faker": "^4.1.0",
    "jest": "^22.1.4",
    "nodemon": "^1.12.1",
    "rosie": "^1.6.0",
    "sequelize-cli": "^3.2.0",
    "spectacle-docs": "^0.9.13",
    "sqlite3": "^3.1.13",
    "superagent": "^3.8.2",
    "supertest": "^3.0.0"
  }
}
