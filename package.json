{
  "name": "rytmi-api",
  "version": "0.1.0",
  "description": "Rytmi management system API",
  "repository": {
    "type": "git",
    "url": "https://github.com/codento/rytmi-api"
  },
  "main": "api/index.js",
  "scripts": {
    "start": "nodemon",
    "build": "docker-compose build",
    "test": "mocha",
    "coverage": "node_modules/.bin/istanbul cover node_modules/mocha/bin/_mocha -- --compilers js:babel-core/register --colors --reporter dot test/*.js",
    "testwatch": "mocha --no-exit --watch --reporter min test/02-test-users.js",
    "create-html-doc": "node node_modules/spectacle-docs/bin/spectacle.js -t doc/ doc/openapi-spec.json",
    "db": "NODE_ENV=development bin/setup-db.sh",
    "resetdb": "NODE_ENV=development babel-node bin/initdb.js",
    "containers": "docker-compose up -d && echo Rytmi API is now up & running.",
    "stop": "docker-compose down"
  },
  "author": "Antti Myyr√§",
  "license": "MIT",
  "dependencies": {
    "babel-register": "^6.26.0",
    "bookshelf": "^0.11.1",
    "bookshelf-json-columns": "^2.1.1",
    "bookshelf-schema": "^0.3.6",
    "dotenv": "^4.0.0",
    "knex": "^0.13.0",
    "pg": "^7.4.1",
    "restify": "^6.3.4",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "chai": "^4.1.2",
    "eslint": "^4.16.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "faker": "^4.1.0",
    "istanbul": "^0.4.5",
    "mocha": "^4.0.1",
    "nodemon": "^1.12.1",
    "restify-clients": "^1.5.2",
    "rosie": "^1.6.0",
    "spectacle-docs": "^0.9.13"
  }
}
